<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <!--
        targetRuntime:
            MyBatis3Simple：基础的增删改查
            MyBatis3：复杂的增删改查
     -->

    <context id="DB2Tables" targetRuntime="MyBatis3Simple">

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/test"
                        userId="root"
                        password="123456">
        </jdbcConnection>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!--
            javaModelGenerator 生成POJO
                targetPackage：指定生成的POJO存放的包
                targetProject：将生成的包放在哪个工程下
         -->
        <javaModelGenerator targetPackage="org.bigjava.bean" targetProject=".\src">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!--
            sqlMapGenerator：sql映射文件生成器，指定xml文件生成的地方
         -->
        <sqlMapGenerator targetPackage="text" targetProject=".\config">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <!--
            javaClientGenerator：dao接口生成的地方


        -->
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="org.bigjava.dao"
                             targetProject=".\src">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <!--
            table：指定要逆向生成哪个数据表
                tableName：表名
                domainObjectName：这个表对应的对象名
        -->

        <table tableName="customers" domainObjectName="Customer">

        </table>

    </context>
</generatorConfiguration>